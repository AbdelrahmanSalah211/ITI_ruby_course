<h1>Articles</h1>

<% if user_signed_in? %>
  <%= link_to "New Article", new_article_path %>
<% end %>

<ul>
  <% @articles.each do |article| %>
    <li>
      <h3><%= link_to article.title, article_path(article) %></h3>
      <p><%= truncate(article.content, length: 100) %></p>
    </li>
  <% end %>
</ul>
